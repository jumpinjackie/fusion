<WidgetInfo>
  <Type>PanOnClick</Type>
  <Description>Pans the map in the specified diretion on a click</Description>
  <Location></Location>
  <Label>Pan on click</Label>
  <Tooltip>Pan the map</Tooltip>
  <StatusText></StatusText>
  <ImageUrl>images/icons/pan.png</ImageUrl>
  <ImageClass></ImageClass>
  <StandardUi>true</StandardUi>
  <ContainableBy>Any</ContainableBy>
  <Parameter>
    <Name>Percentage</Name>
    <Description>Percentage of the map width/height to move in the specified direction</Description>
    <Type>integer</Type>
    <Label>Percentage</Label>
    <Min>10</Min>
    <Max>100</Max>
    <DefaultValue>75</DefaultValue>
    <IsMandatory>false</IsMandatory>
  </Parameter>
