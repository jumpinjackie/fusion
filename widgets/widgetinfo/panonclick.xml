      <Name>north</Name>
      <Label>north</Label>
    </AllowedValue>
    <AllowedValue>
      <Name>south</Name>
      <Label>south</Label>
    </AllowedValue>
    <AllowedValue>
      <Name>east</Name>
      <Label>east</Label>
    </AllowedValue>
    <AllowedValue>
      <Name>west</Name>
      <Label>west</Label>
    </AllowedValue>
    <DefaultValue>none</DefaultValue>
    <IsMandatory>true</IsMandatory>
  </Parameter>
</WidgetInfo>


